pragma solidity ^0.8.0;

import {Test,console} from "forge-std/Test.sol";
import {MoodNft} from "../../src/MoodNft.sol";

contract MoodNftTest is Test {
    MoodNft private moodNft;
    string public constant HAPPY_SVG = "data:image/svg+xml;base64,";
    string public constant SAD_SVG = "data:image/svg+xml;base64,";

    address USER_A = makeAddr("userA");

    enum Mood {
        HAPPY,
        SAD
    }

    function setUp() public {
        moodNft = new MoodNft(HAPPY_SVG, SAD_SVG);
    }

    function testViewTokenURI() public {
        vm.prank(USER_A);
        moodNft.mintNft();
        console.log(moodNft.tokenURI(0));

        assert(keccak256(abi.encodePacked(moodNft.tokenIdToMood(0))) == keccak256(abi.encodePacked(Mood.HAPPY)));
    }

    function testFlipMood() public {
        vm.prank(USER_A);
        moodNft.mintNft();
        assert(keccak256(abi.encodePacked(moodNft.tokenIdToMood(0))) == keccak256(abi.encodePacked(Mood.HAPPY)));

        vm.prank(USER_A);
        moodNft.flipMood(0);
        assert(keccak256(abi.encodePacked(moodNft.tokenIdToMood(0))) == keccak256(abi.encodePacked(Mood.SAD)));

        vm.prank(USER_A);
        moodNft.flipMood(0);
        assert(keccak256(abi.encodePacked(moodNft.tokenIdToMood(0))) == keccak256(abi.encodePacked(Mood.HAPPY)));
    }
}